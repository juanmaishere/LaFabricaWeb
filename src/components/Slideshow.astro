
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

<style>


header {
    z-index: 10;
    /* other styles */
}

.slideshow-container {
    position: relative;
    z-index: 1;
}

.slideshow {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    overflow: hidden;
}

.slider {
    width: 2800px; /* Updated width for two images */
    height: 100vh;
    z-index: 2;
    overflow: hidden;

    * {
        outline: none;
    }

    .item {
        padding: 0;
        margin: 0;
        height: 100vh;
        width: 1400px;
        position: relative;
        overflow: hidden;
        box-sizing: border-box; /* Ensure padding/borders are included in width/height */


        img {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            border-radius: 0;
            object-fit: cover; /* Maintain aspect ratio, cover the container */
            position: absolute;
            top: 0;
            left: 0;
            overflow: hidden;
        }
    }
}

.slick-dots {
    display: none;
    position: fixed;
    z-index: 100;
    width: 40px;
    height: auto;
    bottom: auto;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    left: auto;
    color: #fff;
    display: block;

    li {
        display: block;
        width: 100%;
        height: auto;

        & button {
            position: relative;
            width: 20px;
            height: 15px;
            text-align: center;

            &:before {
                content: '';
                background: #fff;
                color: #fff;
                height: 2px;
                width: 20px;
                border-radius: 0;
                position: absolute;
                top: 50%;
                right: 0;
                left: auto;
                transform: translateY(-50%);
                transition: all .3s ease-in-out;
                opacity: 0.6;
            }
        }

        &.slick-active {
            button {
                &:before {
                    width: 0px;
                    opacity: 1;
                }
            }
        }
    }
}

.slideshow-right {
    left: 0;
    z-index: 1;
    width: 50vw;

    .slider {
        left: 0;
        position: absolute;
    }
}

.slideshow-text {
    top: 50%;
    left: 0%;
    transform: translate(0%, 500%);
    z-index: 5;
    font-size: 5rem;
    width: 100%;
    text-align: center;
    color: #fff;
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 100;
    text-transform: uppercase;
    letter-spacing: 20px;
    line-height: 0.8;

    @media (max-width: 767px) {
        font-size: 40px;
    }
}
  </style>
<div class="slideshow-container">
<div class="split-slideshow">
  <div class="slideshow">
    <div class="slider">
      <div class="item">
        <img src="image3.jpg" />
      </div>
      <div class="item">
        <img src="image4.jpg" />
      </div>
      <div class="item">
        <img src="image5.jpg" />
      </div>
      <div class="item">
        <img src="image6.jpg" />
      </div>
    </div>
  </div>
  <div class="slideshow-text">
    <div class="item2">La Fabrica</div>
    <div class="item2">Fiestas</div>
    <div class="item2">Eventos</div>
    <div class="item2"></div>
  </div>
</div>
</div>
<script>

import { onMount } from 'solid-js';
import 'jquery';
import 'slick-carousel';
import $ from 'jquery';

onMount(() => {
  const $slider = $('.slideshow .slider');
  const maxItems = $('.item', $slider).length;
  let dragging = false;
  let tracking: number, rightTracking: number;

  const $sliderRight = $('.slideshow').clone().addClass('slideshow-right').appendTo($('.split-slideshow'));
  const rightItems = $('.item', $sliderRight).toArray();
  const reverseItems = rightItems.reverse();
  $('.slider', $sliderRight).html('');
  for (let i = 0; i < maxItems; i++) {
    $(reverseItems[i]).appendTo($('.slider', $sliderRight));
  }

  $slider.addClass('slideshow-left');
  $('.slideshow-left').slick({
    vertical: true,
    verticalSwiping: true,
    arrows: false,
    infinite: true,
    dots: true,
    speed: 1000,
    cssEase: 'cubic-bezier(0.7, 0, 0.3, 1)'
  }).on('beforeChange', function (event, slick, currentSlide, nextSlide) {
    if (currentSlide > nextSlide && nextSlide === 0 && currentSlide === maxItems - 1) {
      $('.slideshow-right .slider').slick('slickGoTo', -1);
      $('.slideshow-text').slick('slickGoTo', maxItems);
    } else if (currentSlide < nextSlide && currentSlide === 0 && nextSlide === maxItems - 1) {
      $('.slideshow-right .slider').slick('slickGoTo', maxItems);
      $('.slideshow-text').slick('slickGoTo', -1);
    } else {
      $('.slideshow-right .slider').slick('slickGoTo', maxItems - 1 - nextSlide);
      $('.slideshow-text').slick('slickGoTo', nextSlide);
    }
  }).on('mousedown touchstart', function () {
    dragging = true;
    tracking = parseInt($('.slick-track', $slider).css('transform').split(',')[5]);
    rightTracking = parseInt($('.slideshow-right .slick-track').css('transform').split(',')[5]);
  }).on('mousemove touchmove', function () {
    if (dragging) {
      const newTracking = parseInt($('.slideshow-left .slick-track').css('transform').split(',')[5]);
      const diffTracking = newTracking - tracking;
      $('.slideshow-right .slick-track').css({ 'transform': `matrix(1, 0, 0, 1, 0, ${rightTracking - diffTracking})` });
    }
  }).on('mouseleave touchend mouseup', function () {
    dragging = false;
  });

  setInterval(() => {
    $('.slideshow-left').slick('slickNext');
  }, 5000);

  $('.slideshow-right .slider').slick({
    swipe: false,
    vertical: true,
    arrows: false,
    infinite: true,
    speed: 950,
    cssEase: 'cubic-bezier(0.7, 0, 0.3, 1)',
    initialSlide: maxItems - 1
  });

  $('.slideshow-text').slick({
    swipe: false,
    vertical: true,
    arrows: false,
    infinite: true,
    speed: 900,
    cssEase: 'cubic-bezier(0.7, 0, 0.3, 1)'
  });

  // Allow page scrolling when mouse is over the slideshow
  $('.slideshow-container').on('mouseenter', function () {
    $(window).on('scroll.slideshow', function (e) {
      e.preventDefault();
    });
  }).on('mouseleave', function () {
    $(window).off('scroll.slideshow');
  });
});

</script>